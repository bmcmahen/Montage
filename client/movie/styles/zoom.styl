
.movie-detail {
  position: absolute;
  -webkit-transition: -webkit-transform 0.3s linear;
  -moz-transition: all 0.3s linear;
  background: #ddd;
  background-size: cover;
  opacity: 0;
  background-position-x: 50%;
}

.movie-detail.no-image {
  background-color: #c0c0c1;
}

.movie-detail.in {
  opacity: 1;
  -webkit-animation: opacity-anim 0.3s linear;
}

.movie-detail.no-zoom.in {
  -webkit-animation: none;
  transition: none;
}

.movie-detail.out {
  -webkit-animation: opacity-anim-out 0.3s linear;
}


@-webkit-keyframes opacity-anim {
  from { opacity: 0; }
  to   { opacity: 1; }
}

@-webkit-keyframes opacity-anim-out {
  from { opacity: 1; }
  to   { opacity: 0; }
}