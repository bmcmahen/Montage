}

a.control.play i {
  font-size: 40px;
}

a.control.forward {
  border-radius: 50%;
  font-size: 40px;
  padding: 6px 5px 6px 10px;
}

a.control.back {
  border-radius: 50%;
  font-size: 25px;
  padding: 6px 10px 6px 5px;
}

a.control.forward i,
a.control.back i {
  font-size: 25px;
}

.controls a:active, {
