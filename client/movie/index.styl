.controls a,
a.control {
  text-decoration: none;
  color: #79A6CC;
  display: inline-block;
  margin: 7px;
  vertical-align: middle;
  transition: opacity 0.3s ease-out;
  text-shadow: 0 1px 1px rgba(255, 255, 255, 0.44);
}

a.control i:active {
  color: #333;
}

a.control.active i {
