#swipe {
  overflow: hidden;
  height: 100%;
}

#swipe ul {
  padding: 0;
  margin: 0;
  height: -webkit-calc(100% - 45px);
  height: calc(100% - 45px);
  display: table;
  position: static;
  list-style-type: none;
}

#swipe ul li.swipe-item {
  display: table-cell;
  vertical-align: middle;
  box-sizing: border-box;
}

#swipe-controls {
  position: absolute;
  bottom: 50px;
  width: 100%;
  text-align: center;
  margin-bottom: 20px;
}

#swipe-controls div {
  width: 75px;
  height: 50px;
  display: inline-block;
}

#swipe-controls a {
  font-weight: bold;
  vertical-align: middle;
  display: inline-block;
  text-align: center;
  border-radius: 50%;
  transition: all 150ms ease-in;
  text-decoration: none;
  overflow: hidden;
  background: rgb(53, 110, 148);
  color: rgba(255,255,255,0.5);
  width: 30px;
  height: 30px;
  line-height: 30px;
}

#swipe-controls a i {
  display: table-cell;
  vertical-align: middle;
  font-size: 11px;
  line-height: 23px;
  transition: height 150ms ease-in, width 150ms ease-in, font-size 150ms ease-in;
  text-align: center;
  height: 30px;
  width: 30px;
}

#swipe-controls a.active {
  color: #fff;
  width: 50px;
  height: 50px;
  line-height: 50px;
  background: rgb(46, 146, 214);
}

#swipe-controls a.active i {
  height: 50px;
  width: 50px;
  font-size: 23px;
}

