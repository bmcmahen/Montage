#footer {
  /*background: rgba(199, 200, 204, 0.98);*/
  width: 100%;
  top: 45px;
  box-sizing: border-box;
  visibility: visible;
  position: absolute;
  bottom: 0;
  opacity: 1;
  transition: opacity .2s linear;
  z-index: 1000;
  overflow: hidden;
}

a.more:active {
  background: rgba(0,0,0,0.2);
}

#footer .flex {
  display: -webkit-box;
  display: -webkit-flex;
  -webkit-justify-content: space-between;
  -webkit-align-items: center;
}

#footer.full {
  transform: translate3d(0, 0, 0);
}

#footer.hidden {
  opacity: 0;
  visibility: hidden;
}

#footer.fade {
  opacity: 0;
}

#body {
