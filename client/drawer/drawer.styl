#drawer {
  height: 100%;
  left: 0;
  top: 0;
  position: fixed;
  width: 310px;
  color: #fff;
  overflow: auto;
  -webkit-overflow-scrolling: touch;
  background-color: #f7f7f7;
  font-weight: 400;
  box-sizing: border-box;
  padding: 0;
  list-style: none;
  list-style-image: none;
  margin: 0;
}

.nav-drawer-open #drawer {
  display: block;
}

#drawer ul {
  list-style-type: none;
  padding: 0;
  margin: 0;
  height: 100%;
  position: relative;
}

#drawer li a {
  color: rgb(90, 90, 90);
  -webkit-font-smoothing: antialiased;
  box-sizing: border-box;
  padding: 14px;
  padding-left: 17px;
  text-decoration: none;
  display: block;
  border-bottom: 1px solid #eee;
  overflow: hidden;
  text-alight: left;
  -webkit-user-select: none;
  -webkit-touch-callout: none;
  -webkit-tap-highlight-color:rgba(0,0,0,0);
  font-weight: bold;
  width: 100%;
  -webkit-text-size-adjust: 100%;
}

#drawer li a i {
  font-size: 15px;
}

#drawer .search-view li a i {
  font-size: 15px;
}


#drawer .search-view li a {
  padding: 14px 5px;
  padding-left: 11px;
}


#drawer li a span {
  margin-left: 10px;
  font-size: 15px;
  font-weight: 500;
  line-height: 17px;
  font-family: 'helvetica neue';
}

#drawer li a:active,
#drawer li a.active {
  color: white;
  background: #79A6CC;
  cursor: default;
}

.contain {
  transform: translateX(0);
  transition: -webkit-transform ease-out-quart .4s;
  height: 100%;
  position: relative;
  z-index: 800;
  /*background: #7E7E7E;*/
  /*background: #C0C0C0;*/
  background: #D2D2D8;
  box-shadow: -10px 0 30px rgba(0,0,0,0.07);
}

.nav-drawer-open .contain {
  transform: translateX(310px);
}

body.nav-drawer-open {
  overflow: hidden;
}

.search {
  width: 100%;
  padding: 0;
  height: 45px;
  position: absolute;
  top: 0;
  left: 0;
  border-bottom: 1px solid #ddd;
  /*background: #3F7577;*/
  /*background: #7A466B;*/
  background: -webkit-linear-gradient(#fff, #F7F7F7);
  overflow: hidden;
  box-sizing: border-box;
}

.search form {
  height: 100%;
  overflow: hidden;
  background: none;
}

.search i {
  position: absolute;
  font-size: 14px;
}

.search .icon-search {
  top: 50%;
  margin-top: -8px;
  left: 17px;
  color: #777;
}

#drawer .search .remove-sign {
  display: none;
  position: absolute;
  color: white;
  right: 8px;
  top: 7px;
  padding: 6px;
  width: 15px;
  height: 15px;
}

#drawer .search .cancel {
  opacity: 0;
  position: absolute;
  color: white;
  transform: translateX(310px);
  top: 4px;
  padding: 6px;
  transition: all 0.4s;
}


#drawer .search .cancel button {
  border: 0;
  color: #555;
  z-index: 50;
  background: none;
  font-family: 'helvetica neue';
  border-radius: 1px;
  padding: 5px 8px;
  font-weight: 600;
}

#drawer .search .cancel button:active {
  background: #ccc;
}


#drawer.in .search .cancel,
#drawer.active-search .search .cancel {
  opacity: 1;
  transform: translateX(235px);
}

#drawer .search .remove-sign i {
  font-size: 17px;
  color: white;
}

#drawer.active-search .search .remove-sign {
  display: block;
  cursor: pointer;
}


/* Fade in Overlay */

#drawer .drawer-overlay,
#drawer.active-search.in .drawer-overlay {
  visibility: hidden;
  position: absolute;
  width: 100%;
  z-index: 20;
  top: 45px;
  left: 0;
  bottom: 0;
}

#drawer-content li:last-child a {
  border-bottom: 0;
}

#drawer.filter .drawer-overlay {
  visibility: visible;
  background-color: rgba(255, 255, 255, 0);
  transition: background-color .3s;
}

#drawer.in .drawer-overlay {
  visibility: visible;
  background-color: rgba(255, 255, 255, 0.9);
}

.search input,
.search input[disabled] {
  border: none;
  font-size: 15px;
  -webkit-appearance: none;
  -webkit-text-fill-color: #777;
  color: #777;
  -webkit-opacity: 1;
  width: 100%;
  /*background: #3F7577;*/
  /*background: #7A466B;*/
  /*background: #8A567B;*/
  /*background: #C94FA6;*/
  background: none;
  font-family: 'helvetica neue';
  height: 100%;
  padding: 6px;
  padding-left: 40px;
  border-radius: 0;
  box-sizing: border-box;
}

#drawer.in .search input,
#drawer.active-search .search input {
  width: 75%;
}

.search-results a i {
  display: inline-block;
  vertical-align: middle;
  margin-right: 5px;
  padding: 2px;
}

#drawer .search-results a {
  padding: 4px 10px;
}

.navigation-content a i {
  font-size: 0.95em;
}
.navigation-view li:first-child {
  border-top: none;
}

.local-results li:first-child {
  border-top: none;
}

#drawer a.torrent span {
  width: 80%;
  text-overflow: ellipsis;
  overflow: hidden;
  display: inline-block;
  white-space: nowrap;
  vertical-align: middle;
}

a.torrent i {
  padding: 5px 7px;
  font-size: 18px;
  vertical-align: middle;
}

#drawer .loader {
  text-align: center;
  padding: 15px;
  color: #ccc;
}

.navigation-content a i.icon-large {
  line-height: 18px;
}

.navigation-content a i.icon-film {
  font-size: 0.9em;
}

.label {
  text-transform: uppercase;
  color: #95919C;
  font-size: 11px;
  border-bottom: 1px solid #DDDADA;
  border-top: 1px solid #DDDADA;
  padding: 3px 8px;
  background: #E7E6EC;
  padding-left: 17px;
  margin-bottom: -1px;
  font-family: 'helvetica neue';
  font-weight: bold;
}

/*.label:first-child {
  border-top: none;
}*/



#drawer-list-content {
  height: 100%;
}

#drawer-content {
  position: absolute;
  top: 45px;
  overflow: auto;
  width: 100%;
  bottom: 0;
  -webkit-overflow-scrolling: touch;
}

.thumb {
  width: 40px;
  height: 40px;
  display: inline-block;
  vertical-align: middle;
  border-radius: 3px;
  background-size: cover;
}

.search-results {
  padding-top: 4px;
}

@media (max-width : 480px) {
  #drawer {
    width: 250px;
  }

  .nav-drawer-open .contain {
    transform: translateX(250px);
  }

  #drawer.in .search .cancel,
  #drawer.active-search .search .cancel {
    opacity: 1;
    transform: translateX(175px);
  }

}

