input[type="submit"] {
  background: #5cb85c;
  margin-left: 2px;
  border: 1px solid #5cb85c;
  /*border: 1px solid #ccc;*/
  color: white;
}

input[type='submit']:active {
  background: #438643;
}

input[type='text'],
input[type='number'] {
  min-width: 180px;
  border: 1px solid #ccc;
  -webkit-appearance: none;
}

input {
  font-size: 14px;
  outline: none;
  border-radius: 2px;
  padding: 8px 12px;
  border: none;
  color: #555;
  box-shadow: none;
}

input.on-dark {
  background: white;
  color: #555;
}

.inline input:first-child {
  border-top-right-radius: 0;
  border-bottom-right-radius: 0;
  margin-right: 0;
  border-right: none;
}

.inline input:last-child {
  border-top-left-radius: 0;
  border-bottom-left-radius: 0;
  margin-left: 0;
  border-left: none;
}

div.help-text {
  text-align: left;
  font-size: 13px;
  margin: 10px 0;
  color: rgb(117, 117, 117);
}